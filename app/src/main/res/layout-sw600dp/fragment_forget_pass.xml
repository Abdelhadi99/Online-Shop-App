<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ForgetPassFragment">

   <LinearLayout
       android:padding="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:orientation="vertical"
       >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="40dp"
           android:text="in order to get your account\n back, we will send a verification\n code to your email."
           android:layout_marginStart="4dp"
           android:textAlignment="center"
           android:fontFamily="@font/clear_sans_bold"
           android:textColor="@color/light_dark"
           android:textSize="37sp"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="40dp"
           android:text="Email"
           android:layout_marginStart="29dp"
           android:fontFamily="@font/clear_sans_medium"
           android:textColor="@color/orange"
           android:textSize="35sp"
           />
       <EditText
           android:id="@+id/edtEmailForgetPass"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:ems="24"
           android:layout_gravity="center"
           android:inputType="textEmailAddress"
           />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btnSendCode"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="40dp"
           android:layout_gravity="center"
           android:background="@drawable/custom_button"
           android:textAllCaps="false"
           android:ems="9"
           android:layout_marginBottom="35dp"
           android:textSize="25sp"
           android:paddingTop="20dp"
           android:paddingBottom="20dp"           android:fontFamily="@font/clear_sans_medium"
           android:text="Send Code"
           android:textColor="@color/white"
           />

   </LinearLayout>

</FrameLayout>